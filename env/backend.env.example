# 后端应用环境变量配置
# 将此文件复制到 /opt/project/env/backend.env 并根据实际情况修改

# 应用服务端口映射（主机端口:容器端口）
# 如果主机端口被占用，可以修改为其他端口
APP_PORT=27355

# ============================================
# 应用配置文件环境变量（config.docker.ini 使用）
# ============================================

# 数据库配置（应用使用）
DB_HOST=mysql
DB_PORT=3306
DB_USER=root
DB_PASSWORD=123456
DB_NAME=jimiai
DB_TIMEZONE=Asia/Shanghai
DB_TABLE_PREFIX=ai_

# Redis 配置（应用使用）
REDIS_ADDR=redis:6379
REDIS_DB=0

# 应用服务配置
APP_RUN_PORT=:27355
ADMIN_APP_PORT=:27356
LOCAL_IS_MASTER=true

# 域名配置
API_DOMAIN=http://localhost:27355
H5_DOMAIN=http://localhost:27355

# 七牛云配置（可选）
QINIU_ACCESS_KEY=
QINIU_SECRET_KEY=
QINIU_BUCKET=
QINIU_IMG_HOST=

# 邮箱配置（可选）
EMAIL_SMTP_HOST=smtp.qq.com
EMAIL_SMTP_PORT=587
EMAIL_FROM_EMAIL=
EMAIL_FROM_PASSWORD=
EMAIL_FROM_NAME=吉米AI

# 应用 API 配置（可选）
APP_DYU_API_URL=https://api.dyuapi.com
APP_DYU_API_VERSION=v1

